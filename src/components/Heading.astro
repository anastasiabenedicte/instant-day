---
const { htmlheading = "h2", size = "medium", font = "sans", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

// Styling for forskellige st√∏rrelser
const sizeClasses = {
  "large": "text-3xl lg:text-6xl",
  "medium": "text-2xl lg:text-3xl",
  "small": "text-xl",
};

// Styling for skrifttyper
const fontClasses = {
  "display": "font-display",
  "sans": "font-sans",  // Poppins
  "serif": "font-serif",
};
---
<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font]]}>
  <slot />
</Htmlheading>
