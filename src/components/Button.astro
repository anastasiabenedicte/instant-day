---
const { variant = "primary", size = "medium" } = Astro.props;

// Generel styling for alle knapper
const buttonStyling = "border-2 px-16 py-4 font-sans rounded-[25px]";

// Styling for varianter
const variantClasses = {
  "primary": "border-primary bg-primary text-secondary hover:bg-secondary hover:text-primary hover:font-bold",
  "secondary": "border-accent bg-secondary text-primary hover:bg-primary hover:text-secondary hover:font-bold"
};

// Styling for st√∏rrelser
const sizeClasses = {
  "large": "text-4xl",
  "medium": "text-xl",
  "small": "text-lg"
};
---
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
  <slot />
</button>
