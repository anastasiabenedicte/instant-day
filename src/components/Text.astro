---
const { teksttype = "brødtekst", stylingclasses = "" } = Astro.props;

// Styling for forskellige teksttyper
const sizeClasses = {
  "konsultativ": "text-sm italic",  // rettet: text-italic → italic
  "brødtekst": "text-xl my-4",
};
---
<p class:list={["font-sans", sizeClasses[teksttype], stylingclasses]}>
  <slot />
</p>
